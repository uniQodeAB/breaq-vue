service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if isSignedIn() && hasAllowedDomain();
    }

    function isSignedIn() {
    	return request.auth != null;
    }

    function hasAllowedDomain() {
    	return request.auth.token.email.matches(get(/databases/$(database)/documents/allowed-domain/domain).data.value);
    }
  }
}